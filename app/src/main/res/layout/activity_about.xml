<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    android:background="@color/blue"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/cvabout"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:cardCornerRadius="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="100dp"
            >

            <ImageView
                android:id="@+id/ivabout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/fotobintang"
                android:background="@drawable/layout_bg_circle"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bintang Arkaan Amin"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/cvabout"
            android:layout_marginTop="16dp"
            android:textSize="32sp"
            android:textColor="@color/white"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bintangamin02@gmail.com"
            app:layout_constraintTop_toBottomOf="@id/tvnama"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>








</ScrollView>